<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="#FFFFFF"
    tools:context=".EnterOTP"
    tools:layout_editor_absoluteX="-1dp"
    tools:layout_editor_absoluteY="53dp">

    <EditText
        android:id="@+id/otp4"
        android:layout_width="48dp"
        android:layout_height="69dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="124dp"
        android:background="@drawable/my_borders"
        android:ems="10"
        android:hint="#"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#2E0202"
        android:textColorHint="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/otp1"
        android:layout_width="48dp"
        android:layout_height="69dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="268dp"
        android:background="@drawable/my_borders"
        android:ems="10"
        android:hint="#"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#2E0202"
        android:textColorHint="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/otp6"
        android:layout_width="48dp"
        android:layout_height="69dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/my_borders"
        android:ems="10"
        android:hint="#"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#2E0202"
        android:textColorHint="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/otp5"
        android:layout_width="48dp"
        android:layout_height="69dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/my_borders"
        android:ems="10"
        android:hint="#"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#2E0202"
        android:textColorHint="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/otp4"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/otp3"
        android:layout_width="48dp"
        android:layout_height="69dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="172dp"
        android:background="@drawable/my_borders"
        android:ems="10"
        android:hint="#"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#2E0202"
        android:textColorHint="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/otp2"
        android:layout_width="48dp"
        android:layout_height="69dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="220dp"
        android:background="@drawable/my_borders"
        android:ems="10"
        android:hint="#"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#2E0202"
        android:textColorHint="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/submitButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="156dp"
        android:layout_height="54dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/button_shape"
        android:text="submit"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#C63636"
        android:textColorHint="#ECC961"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="198dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="OTP Verification"
        android:textAlignment="center"
        android:textColor="#070000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="423dp"
        android:layout_height="122dp"
        android:layout_marginTop="32dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/securedata" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="346dp"
        android:layout_height="58dp"
        android:layout_marginTop="12dp"
        android:text="Please enter the OTP sent to your phone"
        android:textAlignment="center"
        android:textColor="#070000"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="311dp"
        android:layout_height="57dp"
        android:layout_marginBottom="32dp"
        android:gravity="center|left"
        android:text="Didn't receive the OTP?"
        android:textAlignment="textStart"
        android:textColor="@color/Black"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/submitButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/sendAgainEditText"
        android:layout_width="120dp"
        android:layout_height="53dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="Send again"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="@+id/textView7" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>